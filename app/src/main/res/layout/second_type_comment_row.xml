<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/second_type__layout__main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_gravity="end"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/comment_type_2"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/type_2__label__user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0C31FF"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />

        <RatingBar
            android:id="@+id/type_2__rating__rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:isIndicator="true"
            android:layout_marginEnd="20sp"
            android:stepSize="1"
            style="?android:attr/ratingBarStyleSmall"/>

        <TextView
            android:id="@+id/type_2__label__comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>