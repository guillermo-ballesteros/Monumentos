<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg__launcher"
    android:id="@+id/forgot__layout__main_layout"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".ui.fragment.forgotPassword.ForgotPasswordFragment">
    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/forgot__progress__progress_bar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/forgot_password_img_forgot_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/forgot_password_img" />

    <EditText
        android:id="@+id/forgot__input__email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:inputType="textEmailAddress"
        android:hint="@string/detail_email_input"/>

    <Button
        android:id="@+id/forgot__btn__restore_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/background_btn"
        android:text="@string/detail_btn_forgot_password" />

</LinearLayout>